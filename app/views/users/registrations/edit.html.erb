<div class="card mb-4 rounded-3 shadow-sm">
  <div class="card-body">
    <center class="profile-name"> 
      Edit <%= resource_name.to_s.humanize %>
    </center>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <p>
        Avatar: <br>
        <%= f.file_field :avatar, :class => 'form-control' %>
      </p>

      <p>
        Email: <br>
        <%= f.text_field :email, :class => 'form-control' %>
      </p>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <p>
        Password <i>(leave blank if you don't want to change it)</i> : <br>
        <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </p>

      <p>
        Password confirmation: <br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
      </p>

      <p>
        Current password: <i style="color: #ee538d; font-weight:bold;">(necessary field to confirm your changes)</i> <br>
        <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
      </p>

      <p>
        <%= f.submit "Update", :class => 'btn btn-lg btn-outline-pink' %>
        <%= link_to "Back", :back, class: 'btn btn-lg btn-outline-pink'%>
      </p>
    <% end %>

    <!-- 
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    -->
    
  </div>
</div>